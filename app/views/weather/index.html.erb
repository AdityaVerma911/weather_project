<div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-r from-blue-300 to-yellow-200">

  <div class="bg-white p-4 shadow-lg rounded-md flex items-center">
    <form action="<%= fetch_weather_path %>" method="get" class="flex">
      <select
        name="country_code"
        class="border border-gray-300 rounded-l-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      >
        <%= options_for_select(country_codes, 'US') %>
      </select>
      <input
        type="text"
        name="city"
        placeholder="Enter city"
        class="border p-2 focus:outline-none"
        />
      <button
        type="submit"
        class="bg-blue-500 text-white p-2 rounded-r-md"
      >
        Search
      </button>
    </form>
  </div>

  <% if @average_temperature %>
    <div class="mt-10">
      <div class="flex justify-center">
        <h1 class=" text-2xl font-bold mb-4">
          <%= @average_temperature %>°C
        </h1>
      </div>

      <div class="flex space-x-4">
        <% @weekly_forecast.each do |forecast| %>
          <div class="text-center">
            <p><%= forecast[:day] %></p>
            <p><%= forecast[:temperature] %>°C</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
